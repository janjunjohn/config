{
  "title": "My Custom",
  "rules": [
    {
      "description": "Option + fn to grave_accent_and_tilde",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ]
        }
      ]
    },
    {
      "description": "Shift + Option + fn to grave_accent_and_tilde",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "mandatory": [
                "shift",
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers":[
                "shift"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Map ctrl + [ to escape",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "Map control p to previous tab",
      "manipulators": [
        {

          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": {
                "mandatory": ["shift", "left_control"]
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Map control n to next tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": {
                "mandatory": ["left_control"]
              }
            }
          ]
        }
      ]
    }
  ]
}
